<Application x:Class="evidence_timeline.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:evidence_timeline"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ===== EVIDENCE TIMELINE UNIFIED STYLE SYSTEM ===== -->

            <!-- Colors -->
            <SolidColorBrush x:Key="BorderBrush" Color="#dee2e6" />
            <SolidColorBrush x:Key="BackgroundLight" Color="#f8f9fa" />
            <SolidColorBrush x:Key="TextPrimary" Color="#212529" />
            <SolidColorBrush x:Key="TextSecondary" Color="#6c757d" />

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis" />

            <!-- Typography -->
            <Style x:Key="HeaderText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            </Style>

            <Style x:Key="SectionHeaderText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            </Style>

            <Style x:Key="LabelText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            </Style>

            <Style x:Key="BodyText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            </Style>

            <!-- Form Controls -->
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="4 2" />
                <Setter Property="MinHeight" Value="20" />
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="4 2" />
                <Setter Property="MinHeight" Value="20" />
            </Style>

            <Style TargetType="DatePicker">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="4 2" />
                <Setter Property="MinHeight" Value="20" />
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>

            <Style TargetType="RichTextBox">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="4" />
            </Style>

            <!-- Buttons -->
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="6 2" />
                <Setter Property="MinHeight" Value="20" />
                <Setter Property="MinWidth" Value="50" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </Style>

            <Style x:Key="DialogButton" TargetType="Button">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="8 2" />
                <Setter Property="MinHeight" Value="20" />
                <Setter Property="Width" Value="70" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>

            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="Width" Value="22" />
                <Setter Property="Height" Value="22" />
                <Setter Property="Padding" Value="3" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </Style>

            <Style x:Key="CompactIconButton" TargetType="Button">
                <Setter Property="Width" Value="18" />
                <Setter Property="Height" Value="18" />
                <Setter Property="Padding" Value="2" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </Style>

            <!-- Lists -->
            <Style TargetType="ListBox">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="2" />
            </Style>

            <Style TargetType="DataGrid">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="RowHeight" Value="22" />
                <Setter Property="ColumnHeaderHeight" Value="24" />
            </Style>

            <!-- Containers -->
            <Style TargetType="GroupBox">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            </Style>

            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            </Style>

            <!-- Menu -->
            <Style TargetType="Menu">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style TargetType="MenuItem">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="Padding" Value="6 2" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
