<adonis:AdonisWindow x:Class="evidence_timeline.Views.LinkEvidenceDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="Select Linked Evidence"
                     SizeToContent="WidthAndHeight"
                     WindowStartupLocation="CenterOwner"
                     ResizeMode="CanResizeWithGrip"
                     MinWidth="360"
                     MinHeight="300">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Search evidence:"
                   FontWeight="SemiBold"
                   FontSize="12"
                   Margin="0 0 0 4" />

        <TextBox x:Name="SearchBox"
                 Grid.Row="1"
                 Width="320"
                 Padding="6 4"
                 Margin="0 0 0 10"
                 TextChanged="OnSearchChanged" />

        <ListBox x:Name="EvidenceListBox"
                 Grid.Row="2"
                 MinWidth="320"
                 MinHeight="200"
                 SelectionMode="Extended"
                 DisplayMemberPath="Text" />

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 12 0 0">
            <Button Content="OK"
                    Width="90"
                    Padding="8 3"
                    Margin="0 0 8 0"
                    IsDefault="True"
                    Click="OnOkClicked" />
            <Button Content="Cancel"
                    Width="90"
                    Padding="8 3"
                    IsCancel="True"
                    Click="OnCancelClicked" />
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>
