<adonis:AdonisWindow x:Class="evidence_timeline.Views.OpenRecentWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="Open Recent Case"
                     Width="420"
                     Height="360"
                     ResizeMode="NoResize"
                     WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Recent cases"
                   Style="{StaticResource SectionHeaderText}"
                   Margin="0 0 0 6" />

        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
            <ListBox x:Name="RecentList"
                     ItemsSource="{Binding RecentCasePaths}"
                     SelectedItem="{Binding SelectedCasePath, Mode=TwoWay}"
                     MouseDoubleClick="OnRecentCaseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Converter={StaticResource PathToNameConverter}}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding}"
                                       FontSize="11"
                                       Opacity="0.7" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 8 0 0">
            <Button Style="{StaticResource DialogButton}"
                    Content="Open"
                    Width="80"
                    IsDefault="True"
                    Click="OnOpenClicked" />
            <Button Style="{StaticResource DialogButton}"
                    Content="Cancel"
                    Width="80"
                    Margin="8 0 0 0"
                    IsCancel="True"
                    Click="OnCancelClicked" />
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>
