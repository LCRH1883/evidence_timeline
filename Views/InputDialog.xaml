<adonis:AdonisWindow x:Class="evidence_timeline.Views.InputDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="Input"
                     SizeToContent="WidthAndHeight"
                     WindowStartupLocation="CenterOwner"
                     ResizeMode="NoResize"
                     MinWidth="320">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptText"
                   Text="Enter value"
                   TextWrapping="Wrap"
                   FontSize="12"
                   Margin="0 0 0 10" />
        <TextBox x:Name="InputBox"
                 Grid.Row="1"
                 MinWidth="280"
                 Padding="6 4"
                 Margin="0 0 0 14" />
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80"
                    Padding="8 3"
                    Margin="0 0 8 0"
                    IsDefault="True"
                    Click="OnOkClicked" />
            <Button Content="Cancel"
                    Width="80"
                    Padding="8 3"
                    IsCancel="True"
                    Click="OnCancelClicked" />
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>
