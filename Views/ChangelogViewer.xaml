<adonis:AdonisWindow x:Class="evidence_timeline.Views.ChangelogViewer"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="Changelog"
                     Height="600"
                     Width="800"
                     ResizeMode="CanResizeWithGrip"
                     WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Version History"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0 0 0 12" />

        <!-- Changelog content -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Background="{DynamicResource SurfaceBackground}">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="12">
                <TextBlock x:Name="ChangelogTextBlock"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="11"
                           LineHeight="18" />
            </ScrollViewer>
        </Border>

        <!-- Close button -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="2"
                    Margin="0 12 0 0">
            <Button Style="{StaticResource DialogButton}"
                    Content="Close"
                    IsDefault="True"
                    IsCancel="True"
                    Click="OnCloseClicked" />
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>
