<adonis:AdonisWindow x:Class="evidence_timeline.Views.CaseSettingsWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="Case Settings"
                     Height="620"
                     Width="520"
                     ResizeMode="CanResizeWithGrip"
                     WindowStartupLocation="CenterOwner">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="Visibility"
                           Style="{StaticResource SectionHeaderText}"
                           Margin="0 0 0 4" />
                <CheckBox Content="Show metadata pane"
                          IsChecked="{Binding ShowRightPane, Mode=TwoWay}"
                          Margin="0 0 0 4" />
                <CheckBox Content="Show notes pane"
                          IsChecked="{Binding ShowBottomPane, Mode=TwoWay}"
                          Margin="0 0 0 4" />
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0 4 0 0">
                <TextBlock Text="Sorting"
                           Style="{StaticResource SectionHeaderText}"
                           Margin="0 0 0 4" />
                <CheckBox Content="Sort newest first"
                          IsChecked="{Binding SortNewestFirst, Mode=TwoWay}" />
            </StackPanel>

            <GroupBox Header="Evidence types" Grid.Row="2" Margin="0 4 0 0">
                <Grid Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <ListBox ItemsSource="{Binding EvidenceTypes}"
                             SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                             DisplayMemberPath="Name"
                             Grid.Column="0" />
                    <StackPanel Grid.Column="1" Margin="12 0 0 0">
                        <Button Content="Add"
                                Command="{Binding AddTypeCommand}"
                                Margin="0 0 0 6" />
                        <Button Content="Rename"
                                Command="{Binding RenameTypeCommand}"
                                Margin="0 0 0 6" />
                        <Button Content="Delete"
                                Command="{Binding DeleteTypeCommand}" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Header="People" Grid.Row="3" Margin="0 4 0 0">
                <Grid Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <ListBox ItemsSource="{Binding People}"
                             SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                             DisplayMemberPath="Name"
                             Grid.Column="0"
                             MouseDoubleClick="OnPersonDoubleClick" />
                    <StackPanel Grid.Column="1" Margin="12 0 0 0">
                        <Button Content="Add"
                                Width="120"
                                Click="OnAddPersonClicked"
                                Margin="0 0 0 6" />
                        <Button Content="Edit"
                                Width="120"
                                Click="OnEditPersonClicked"
                                Margin="0 0 0 6" />
                        <Button Content="Delete"
                                Width="120"
                                Command="{Binding DeletePersonCommand}"
                                CommandParameter="{Binding SelectedPerson}" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Row="4"
                        Margin="0 4 0 0">
                <Button Style="{StaticResource DialogButton}"
                        Margin="0 0 6 0"
                        Content="Save"
                        IsDefault="True"
                        Click="OnSaveClicked" />
                <Button Style="{StaticResource DialogButton}"
                        Content="Cancel"
                        IsCancel="True"
                        Click="OnCancelClicked" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</adonis:AdonisWindow>
