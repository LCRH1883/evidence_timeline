<adonis:AdonisWindow x:Class="evidence_timeline.Views.StartDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     xmlns:local="clr-namespace:evidence_timeline.Views"
                     Title="Evidence Timeline"
                     Icon="/assets/intagri icon.png"
                     Width="540"
                     Height="380"
                     WindowStartupLocation="CenterScreen"
                     ResizeMode="NoResize">
    <adonis:AdonisWindow.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter" />
    </adonis:AdonisWindow.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- App Branding Header -->
        <Border Grid.Row="0"
                Background="#f8f9fa"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0 0 0 1"
                Padding="12 16"
                Margin="-8 -8 -8 12">
            <StackPanel HorizontalAlignment="Center">
                <Image Source="/assets/Logo.png"
                       Width="240"
                       Height="80"
                       Margin="0 0 0 12"
                       HorizontalAlignment="Center"
                       Stretch="Uniform" />
                <TextBlock Text="Evidence Timeline"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 0" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Welcome back"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0 0 0 6" />
            <TextBlock Text="Pick a recent case or start a new one."
                       Style="{StaticResource BodyText}"
                       Margin="0 0 0 12" />
        </StackPanel>

        <Border Grid.Row="2"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Padding="8"
                CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Recent cases"
                           Style="{StaticResource SectionHeaderText}"
                           Margin="0 0 0 6" />
                <ListBox x:Name="RecentCasesList"
                         Grid.Row="1"
                         ItemsSource="{Binding RecentCases}"
                         SelectedItem="{Binding SelectedCase, Mode=TwoWay}"
                         MinHeight="160"
                         MouseDoubleClick="OnRecentCaseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding FullPath}"
                                           FontSize="11"
                                           Opacity="0.7" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 4 0 0">
            <Button Content="Create new case"
                    Width="130"
                    Margin="0 0 3 0"
                    Click="OnCreateClicked" />
            <Button Content="Open selected"
                    Width="120"
                    Margin="0 0 3 0"
                    IsEnabled="{Binding SelectedItem, ElementName=RecentCasesList, Converter={StaticResource NullToBoolConverter}}"
                    Click="OnOpenClicked" />
            <Button Content="Browse..."
                    Width="90"
                    Click="OnBrowseClicked" />
        </StackPanel>

        <!-- Copyright Footer -->
        <TextBlock Grid.Row="4"
                   Text="Â© 2025 Intagri Technologies LLC. All rights reserved."
                   FontSize="8"
                   Foreground="{StaticResource TextSecondary}"
                   HorizontalAlignment="Center"
                   Margin="0 8 0 0" />
    </Grid>
</adonis:AdonisWindow>
