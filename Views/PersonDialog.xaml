<Window x:Class="evidence_timeline.Views.PersonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Person"
        Height="360"
        Width="420"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Name" FontWeight="Bold" />
                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 4 0 12" />

                <TextBlock Text="Aliases" FontWeight="Bold" />
                <ItemsControl ItemsSource="{Binding Aliases}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                <TextBlock Text="{Binding}" Width="200" />
                                <Button Content="Remove"
                                        Command="{Binding DataContext.RemoveAliasCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Padding="4 2"
                                        Margin="6 0 0 0" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Add alias"
                        Command="{Binding AddAliasCommand}"
                        Padding="6 2"
                        Margin="0 6 0 12"
                        HorizontalAlignment="Left" />

                <TextBlock Text="Notes" FontWeight="Bold" />
                <TextBox Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="120" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Margin="0 12 0 0">
            <Button Width="90"
                    Margin="0 0 8 0"
                    Content="Save"
                    IsDefault="True"
                    Click="OnSaveClicked" />
            <Button Width="90"
                    Content="Cancel"
                    IsCancel="True"
                    Click="OnCancelClicked" />
        </StackPanel>
    </Grid>
</Window>
