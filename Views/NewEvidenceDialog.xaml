<adonis:AdonisWindow x:Class="evidence_timeline.Views.NewEvidenceDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:models="clr-namespace:evidence_timeline.Models"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="New Evidence"
                     SizeToContent="WidthAndHeight"
                     WindowStartupLocation="CenterOwner"
                     ResizeMode="NoResize"
                     MinWidth="360">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="6" Width="340">
            <TextBlock Text="Title" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <TextBox x:Name="TitleBox" Margin="0 0 0 3" />

            <TextBlock Text="Court number" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <TextBox x:Name="CourtBox" Margin="0 0 0 3" />

            <TextBlock Text="Type" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <ComboBox x:Name="TypeBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0 0 0 3" />

            <TextBlock Text="Date mode" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <ComboBox x:Name="DateModeBox"
                      SelectedValuePath="Tag"
                      Margin="0 0 0 3">
                <ComboBoxItem Content="Exact" Tag="{x:Static models:EvidenceDateMode.Exact}" />
                <ComboBoxItem Content="Around" Tag="{x:Static models:EvidenceDateMode.Around}" />
                <ComboBoxItem Content="Broad" Tag="{x:Static models:EvidenceDateMode.Broad}" />
            </ComboBox>

            <TextBlock Text="Exact date" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <DatePicker x:Name="ExactDatePicker" Margin="0 0 0 3" />

            <TextBlock Text="Start date" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <DatePicker x:Name="StartDatePicker" Margin="0 0 0 3" />

            <TextBlock Text="End date" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <DatePicker x:Name="EndDatePicker" Margin="0 0 0 3" />

            <TextBlock Text="Around amount/unit" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                <TextBox x:Name="AroundAmountBox" Width="60" Margin="0 0 6 0" />
                <ComboBox x:Name="AroundUnitBox" Width="120">
                    <ComboBoxItem Content="days" />
                    <ComboBoxItem Content="weeks" />
                    <ComboBoxItem Content="months" />
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Attachments (optional)" Style="{StaticResource LabelText}" Margin="0 0 0 2" />
            <ItemsControl ItemsSource="{Binding Attachments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 4">
                            <TextBlock Text="{Binding FileName}" Width="200" />
                            <Button Content="Remove"
                                    Margin="6 0 0 0"
                                    Padding="6 2"
                                    Click="OnRemoveAttachmentClicked" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Add attachments"
                    Margin="0 4 0 8"
                    Padding="8 3"
                    Click="OnAddAttachmentsClicked" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 2 0 0">
                <Button Style="{StaticResource DialogButton}"
                        Content="Create"
                        Margin="0 0 6 0"
                        IsDefault="True"
                        Click="OnCreateClicked" />
                <Button Style="{StaticResource DialogButton}"
                        Content="Cancel"
                        IsCancel="True"
                        Click="OnCancelClicked" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</adonis:AdonisWindow>
