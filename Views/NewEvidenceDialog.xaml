<adonis:AdonisWindow x:Class="evidence_timeline.Views.NewEvidenceDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:models="clr-namespace:evidence_timeline.Models"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="New Evidence"
                     SizeToContent="WidthAndHeight"
                     WindowStartupLocation="CenterOwner"
                     ResizeMode="NoResize"
                     MinWidth="360">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" Width="340">
            <TextBlock Text="Title"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <TextBox x:Name="TitleBox"
                     Margin="0 0 0 10" />

            <TextBlock Text="Court number"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <TextBox x:Name="CourtBox"
                     Margin="0 0 0 10" />

            <TextBlock Text="Type"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <ComboBox x:Name="TypeBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0 0 0 12" />

            <TextBlock Text="Date mode"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <ComboBox x:Name="DateModeBox"
                      SelectedValuePath="Tag"
                      Margin="0 0 0 10">
                <ComboBoxItem Content="Exact" Tag="{x:Static models:EvidenceDateMode.Exact}" />
                <ComboBoxItem Content="Around" Tag="{x:Static models:EvidenceDateMode.Around}" />
                <ComboBoxItem Content="Broad" Tag="{x:Static models:EvidenceDateMode.Broad}" />
            </ComboBox>

            <TextBlock Text="Exact date"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <DatePicker x:Name="ExactDatePicker"
                        Margin="0 0 0 10" />

            <TextBlock Text="Start date"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <DatePicker x:Name="StartDatePicker"
                        Margin="0 0 0 10" />

            <TextBlock Text="End date"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <DatePicker x:Name="EndDatePicker"
                        Margin="0 0 0 10" />

            <TextBlock Text="Around amount/unit"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Margin="0 0 0 4" />
            <StackPanel Orientation="Horizontal" Margin="0 0 0 14">
                <TextBox x:Name="AroundAmountBox" Width="60" Margin="0 0 8 0" />
                <ComboBox x:Name="AroundUnitBox" Width="120">
                    <ComboBoxItem Content="days" />
                    <ComboBoxItem Content="weeks" />
                    <ComboBoxItem Content="months" />
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                <Button Content="Create"
                        Width="90"
                        Padding="8 3"
                        Margin="0 0 8 0"
                        IsDefault="True"
                        Click="OnCreateClicked" />
                <Button Content="Cancel"
                        Width="90"
                        Padding="8 3"
                        IsCancel="True"
                        Click="OnCancelClicked" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</adonis:AdonisWindow>
